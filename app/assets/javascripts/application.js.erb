$(document).ready(function (){

	var myCoords = new google.maps.LatLng(28.669541, -99.169141);

    function initialize() {
      var mapOptions = {
      center: myCoords,
      zoom: 16,
      scrollwheel: false
      };
        
      var map = new google.maps.Map(document.getElementById('map-canvas'),
                mapOptions);    
    
    var image = "<%= asset_path 'doveicon.svg' %>"
    var marker = new google.maps.Marker({
	  position: myCoords,
	  map: map,
	  icon: image,
	  label: { color: '#eab400', fontWeight: 'bold', fontSize: '14px', text: 'Dilley Dove Hunts' }


});



    }
      

    google.maps.event.addDomListener(window, 'load', initialize);
});